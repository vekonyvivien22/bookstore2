<%- include('header') %>
<%- include('nav', { categories: categories, stores: stores }) %>
    
	<h2 class="m-5 text-center">Create an account</h2>
	<form class="mt-5 mb-5" method="post" action="/user/reg">
    <%- include('alert') %>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
		<div class="form-group row">
	  		<div class = "col-sm-3"></div>
	    	<label for="inputUsername" class="col-sm-2 col-form-label">Username</label>
			<div class="col-sm-4">
	      		<input type="text" class="form-control" id="inputUsername" name="username" placeholder="Username">
	    	</div>
	  	</div>
	  	
	  	<div class="form-group row">
	  		<div class = "col-sm-3"></div>
	    	<label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
			<div class="col-sm-4">
	      		<input type="email" class="form-control" id="inputEmail" name="email" placeholder="Email">
	    	</div>
	  	</div>
	  	
	  	<div class="form-group row">
	  		<div class = "col-sm-3"></div>
	    	<label for="inputFirstName" class="col-sm-2 col-form-label">First name</label>
			<div class="col-sm-4">
	      		<input type="text" class="form-control" id="inputFirstName" name="firstName" placeholder="First Name">
	    	</div>
	  	</div>
	  	
	  	<div class="form-group row">
	  		<div class = "col-sm-3"></div>
	    	<label for="inputLastName" class="col-sm-2 col-form-label">Last Name</label>
			<div class="col-sm-4">
	      		<input type="text" class="form-control" id="inputLastName" name="lastName" placeholder="Last Name">
	    	</div>
	  	</div>
	  	
	  	<div class="form-group row">
	  		<div class = "col-sm-3"></div>
	    	<label for="inputAddress" class="col-sm-2 col-form-label">Address</label>
			<div class="col-sm-4">
	      		<input type="text" class="form-control" id="inputAdrress" name="address" placeholder="Address">
	    	</div>
	  	</div>
	  	
	  	<div class="form-group row">
	  		<div class = "col-sm-3"></div>
	    	<label for="inputPassword1" class="col-sm-2 col-form-label">Password</label>
	    	<div class="col-sm-4">
	      		<input type="password" class="form-control" id="inputPassword1" name="password" placeholder="Password">
	    	</div>
	  	</div>
	  	
	  	<div class="form-group row">
	  		<div class = "col-sm-3"></div>
	    	<label for="inputPassword2" class="col-sm-2 col-form-label">Password again</label>
	    	<div class="col-sm-4">
	      		<input type="password" class="form-control" id="inputPassword2" name="passwordConfirmation" placeholder="Password">
	    	</div>
	  	</div>
	
	  	<div class="form-group row">
	  		<div class = "col-sm-3"></div>
	    	<div class="col-sm-6 text-right">
	      		<button type="submit" class="btn btn-primary">Sign up</button>
	    	</div>
	  	</div>
	</form>

		
	<script  src="/js/jquery.min.js"></script>
	<script  src="/js/bootstrap.min.js"></script>
<%- include('footer') %>
